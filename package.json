{
  "name": "schooltape",
  "version": "4.4.0",
  "private": true,
  "description": "Schooltape is a free, open-source, web extension that allows you to customise the look, feel, and functionality of Schoolbox!",
  "homepage": "https://schooltape.github.io",
  "license": "MIT",
  "author": "42willow",
  "type": "module",
  "scripts": {
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "format": "prettier --write .",
    "postinstall": "wxt prepare",
    "lint": "eslint .",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox"
  },
  "devDependencies": {
    "@catppuccin/palette": "^1.7.1",
    "@catppuccin/tailwindcss": "1.0.0",
    "@eslint/compat": "^2.0.2",
    "@eslint/js": "^10.0.0",
    "@lucide/svelte": "^0.554.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "@tsconfig/svelte": "^5.0.7",
    "@types/node": "^24.10.13",
    "@types/semver": "^7.7.1",
    "@wxt-dev/module-svelte": "^2.0.4",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.15.0",
    "globals": "^16.5.0",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "semver": "^7.7.4",
    "svelte": "^5.50.1",
    "svelte-check": "^4.3.6",
    "svelte-spa-router": "^4.0.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "wxt": "^0.20.15"
  }
}
